<launch>
  <node 
    pkg="livox_camera_calib"
    type="bag_to_pcd"
    name="bag_to_pcd"
    output="screen"
  />
   <param name="bag_file" type="string" value="$(find livox_camera_calib)/input/2.bag"/>
   <param name="lidar_topic" type="string" value="/livox/lidar"/>
   <param name="pcd_file" type="string" value="$(find livox_camera_calib)/result/2.pcd"/>
   <param name="is_custom_msg" type="bool" value="true"/>
   <!-- !!! change this to true if this is recorded directly by livox_ros_driver -->
</launch>